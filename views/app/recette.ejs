<%- include ('../include/headPage.ejs') %>
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-files-o"></i>
                    <%= title %>
                </h3>

                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/home">Acceuil</a></li>
                    <li><i class="icon_document_alt"></i>
                        <%= field %>
                    </li>
                    <li><i class="fa fa-files-o"></i>Recettes</li>
                </ol>
                <div class="col-sm-11">
                </div>
            </div>
        </div>
        <!-- Form validations -->
        <div class="row">
            <div class="col-lg-6">
                <section class="panel">
                    <header class="panel-heading">
                        Les avions disponibles
                    </header>
                    <div class="panel-body">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>N° de l'avion</th>
                                    <th>Design</th>
                                    <th>Nombre de place</th>
                                    <th>Recette</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>N° de l'avion</th>
                                    <th>Design</th>
                                    <th>Nombre de place</th>
                                    <th>Recette</th>
                                </tr>

                            </tfoot>
                            <tbody>
                                <% if (bilan.length>0) { %>
                                    <% bilan.forEach(avion => { %>
                                        <tr class="recette">
                                            <td>
                                                <%= avion.num %>
                                            </td>
                                            <td>
                                                <%= avion.design %>
                                            </td>
                                            <td>
                                                <%= avion.nbPlace %>
                                            </td>
                                            <td>
                                                <%= avion.total %>
                                            </td>
                                        </tr>
                                        <% }) %>

                                            <% } %>
                            </tbody>
                        </table>
                    </div>

            </div>
            </section>
        </div>
        <!-- page end-->
    </section>

    <%- include ('../include/footPage.ejs') %>