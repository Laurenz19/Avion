<%- include ('../include/headPage.ejs') %>
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-files-o"></i>
                    <%= title %>
                </h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/home">Acceuil</a></li>
                    <li><i class="icon_document_alt"></i>
                        <%= field %>
                    </li>
                    <li><i class="fa fa-files-o"></i>Formulaire d'ajout</li>
                </ol>
            </div>
        </div>
        <!-- Form validations -->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Veuillez Completer tout les champs du fomulaire avant d'ajouter un avion
                    </header>
                    <%- include('../include/message.ejs') %>
                        <div class="panel-body">
                            <div class="form">
                                <form class="form-validate form-horizontal" method="POST" action="<%= url %> ">
                                    <div class="form-group ">
                                        <label for="cname" class="control-label col-lg-2">Numero<span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            <input class="form-control" name="numAvion" minlength="5" type="text" value="<%= avion.numAvion %>" readonly/>
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="cemail" class="control-label col-lg-2">Design<span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            <input class="form-control" type="text" name="design" value="<%= avion.design %>" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="curl" class="control-label col-lg-2">Nombre de place<span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            <input class="form-control" type="number" min="0" name="nbPlace" value="<%= avion.nbPlace %>" required />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-2">Vol</label>
                                        <div class="col-lg-10">
                                            <select class="form-control" name="vol" required>
                                                <% if (oldVol!=null) { %>
                                                    <option value=<%= oldVol.id %> ><%= oldVol.villeDepart %> - <%= oldVol.villeArrivee %></option>
                                                <% } %>
                                                
                                                <% if (vols.length>0) { %>
                                                    <% vols.forEach(vol => { %>
                                                        <% if (vol.id !== oldVol.id) { %>
                                                            <option value=<%= vol.id %>><%= vol.villeDepart %> - <%= vol.villeArrivee %>  </option>
                                                        <% } %>
                                                    <% }) %>
                                                <% } else { %>
                                                    <option></option>
                                                <% } %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-2">Date de d√©part</label>

                                        <div class="col-sm-10">
                                            <%= moment(avion.dateDepart).format('DD/MM/YYYY')%>
                                                <input id="dp1" type="date" name="dateDepart" size="16" class="form-control" value=" <%= moment(avion.dateDepart).format('DD/MM/YYYY')%>" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-primary" type="submit" id="addVolbtn">Save</button>
                                            <button class="btn btn-default" type="reset">Cancel</button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                </section>
            </div>
            <!-- page end-->
    </section>


    <%- include ('../include/footPage.ejs') %>