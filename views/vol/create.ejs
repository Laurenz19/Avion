<%- include ('../include/headPage.ejs') %>
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-files-o"></i>
                    <%= title %>
                </h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/home">Acceuil</a></li>
                    <li><i class="icon_document_alt"></i>Vol</li>
                    <li><i class="fa fa-files-o"></i>Formulaire d'ajout</li>
                </ol>
            </div>
        </div>
        <!-- Form validations -->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Veuillez Completer tout les champs du fomulaire avant d'ajouter un vol
                    </header>
                    <%- include('../include/message.ejs') %>
                        <div class="panel-body">
                            <div class="form">
                                <form class="form-validate form-horizontal" method="POST" action="/new_vol">
                                    <div class="form-group ">
                                        <label for="cname" class="control-label col-lg-2">Ville de départ<span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            <input class="form-control" id="villeDepart" name="villeDepart" minlength="5" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="cemail" class="control-label col-lg-2">Ville d'arrivée <span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            <input class="form-control " id="villeArrive" type="text" name="villeArrivee" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="curl" class="control-label col-lg-2">Frais</label>
                                        <div class="col-lg-10">
                                            <input class="form-control " id="frais" type="number" min="0" name="frais" required />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-primary" type="submit" id="addVolbtn">Save</button>
                                            <button class="btn btn-default" type="reset">Cancel</button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                </section>
            </div>
            <!-- page end-->
    </section>


    <%- include ('../include/footPage.ejs') %>