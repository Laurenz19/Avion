<%- include ('../include/headPage.ejs') %>
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-files-o"></i>
                    <%= title %>
                </h3>

                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/home">Acceuil</a></li>
                    <li><i class="icon_document_alt"></i>Vol</li>
                    <li><i class="fa fa-files-o"></i>Liste des Vols</li>
                </ol>
                <div class="col-sm-11">
                </div>

                <a class="btn btn-primary col-sm-1" href="new_vol"><i class="icon_plus_alt2"></i></a>

            </div>
        </div>
        <!-- Form validations -->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Liste des Vols disponibles
                    </header>
                    <div class="panel-body">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Ville de départ</th>
                                    <th>Ville D'arrivée</th>
                                    <th>Frais</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Ville de départ</th>
                                    <th>Ville D'arrivée</th>
                                    <th>Frais</th>
                                    <th>Action</th>
                                </tr>

                            </tfoot>
                            <tbody>
                                <% if (vols.length>0) { %>
                                    <% vols.forEach(vol => { %>
                                        <tr>
                                            <td>
                                                <%= vol.villeDepart %>
                                            </td>
                                            <td>
                                                <%= vol.villeArrivee %>
                                            </td>
                                            <td>
                                                <%= vol.frais %>
                                            </td>
                                            <td>
                                                <a class="btn btn-success" href="/update_vol/<%= vol.id %>"><i class="icon_check_alt2"></i></a>
                                                <a class="btn btn-danger" href="/delete_vol/<%= vol.id %>"><i class="icon_close_alt2"></i></a>
                                            </td>
                                        </tr>
                                        <% }) %>

                                            <% } %>
                            </tbody>
                        </table>
                    </div>

            </div>
            </section>
        </div>
        <!-- page end-->
    </section>

    <%- include ('../include/footPage.ejs') %>