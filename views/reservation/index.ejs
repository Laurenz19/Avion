<%- include ('../include/headPage.ejs') %>
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-files-o"></i>
                    <%= title %>
                </h3>

                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/home">Acceuil</a></li>
                    <li><i class="icon_document_alt"></i>
                        <%= field %>
                    </li>
                    <li><i class="fa fa-files-o"></i>Liste des réservations</li>
                </ol>
                <div class="col-sm-11">
                </div>

                <a class="btn btn-primary col-sm-1" href="new_res_1of3"><i class="icon_plus_alt2"></i></a>

            </div>
        </div>
        <!-- Form validations -->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Liste des Réservations
                    </header>
                    <div class="panel-body">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>N° de Réservation</th>
                                    <th>Avion</th>
                                    <th>Nom du Voyageur</th>
                                    <th>N° de Place</th>
                                    <th>Date de Réservation</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>N° de Réservation</th>
                                    <th>Avion</th>
                                    <th>Nom du Voyageur</th>
                                    <th>N° de Place</th>
                                    <th>Date de Réservation</th>
                                    <th>Action</th>
                                </tr>

                            </tfoot>
                            <tbody>
                                <% if (reservations.length>0) { %>
                                    <% reservations.forEach(res => { %>
                                        <tr>
                                            <td>
                                                <%= res.numReservation %>
                                            </td>
                                            <td>
                                                <%= res.numAvion %>
                                            </td>
                                            <td>
                                                <%= res.voyageur %>
                                            </td>
                                            <td>
                                                <%= res.numPlace %>
                                            </td>
                                            <td>
                                                <%= moment(res.dateRes).format('DD/MM/YYYY')%>
                                            </td>
                                            <td>
                                                <a class="btn btn-info" href="/detail_res/<%= res.id %>">voir</a>
                                                <a class="btn btn-success" href="/update_res_1of2/<%= res.id %>"><i class="icon_check_alt2"></i></a>
                                                <a class="btn btn-danger" href="/delete_res/<%= res.id %>"><i class="icon_close_alt2"></i></a>
                                            </td>
                                        </tr>
                                        <% }) %>

                                            <% } %>
                            </tbody>
                        </table>
                    </div>

            </div>
            </section>
        </div>
        <!-- page end-->
    </section>

    <%- include ('../include/footPage.ejs') %>