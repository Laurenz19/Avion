<%- include ('../include/headPage.ejs') %>
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-files-o"></i>
                    <%= title %>
                </h3>

                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/home">Acceuil</a></li>
                    <li><i class="icon_document_alt"></i>
                        <%= field %>
                    </li>
                    <li><i class="fa fa-files-o"></i>infos</li>
                </ol>
                <div class="col-sm-11">
                </div>

            </div>
        </div>
        <!-- page start-->
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <div class="recent">
                    <h3>Reservation
                        <%= reservation.numRes %> :</h3>
                </div>
                <div class="">
                    <p>Mr ou Mme
                        <%= reservation.voyageur %> a réservé la place n°:
                            <%= reservation.numPlace %> pour le vol "
                                <%= vol.villeDepart %> -
                                    <%= vol.villeArrivee %>" le
                                        <%= moment(reservation.createdAt).format('DD/MM/YYYY')%>.
                    </p>
                    <h4>N° Avion:</h4>
                    <%= reservation.numAvion %> <br>
                        <h4>Date de Départ: </h4>
                        <%= moment(reservation.dateRes).format('DD/MM/YYYY')%><br>
                            <h4>Vol:</h4>
                            <%= vol.villeDepart %> -
                                <%= vol.villeArrivee %><br>
                                    <h4>Frais:</h4>
                                    <%= vol.frais %>
                </div>
            </div>
        </div>
        <!-- page end-->
    </section>

    <%- include ('../include/footPage.ejs') %>